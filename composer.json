{
    "name": "spatie/laravel-mailcoach",
    "description": "Send email campaigns using Laravel",
    "keywords": [
        "spatie",
        "laravel-mailcoach",
        "mail",
        "mass mailing"
    ],
    "homepage": "https://mailcoach.app",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "homepage": "https://spatie.be",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "ext-dom": "*",
        "ext-libxml": "*",
        "cakephp/chronos": "^2.0",
        "guzzlehttp/guzzle": "^7.0",
        "illuminate/database": "^9.0",
        "illuminate/events": "^9.0",
        "illuminate/mail": "^9.0",
        "illuminate/queue": "^9.0",
        "illuminate/redis": "^9.0",
        "illuminate/support": "^9.0",
        "laravel/horizon": "^5.0",
        "league/html-to-markdown": "^4.10|^5.0",
        "livewire/livewire": "^2.10",
        "nesbot/carbon": "^2.37",
        "spatie/enum": "^3.7",
        "spatie/laravel-feed": "^4.0",
        "spatie/laravel-flash": "^1.6",
        "spatie/laravel-json-api-paginate": "^1.11",
        "spatie/laravel-medialibrary": "^10.0.1",
        "spatie/laravel-package-tools": "^1.10.0",
        "spatie/laravel-query-builder": "^5.0",
        "spatie/laravel-rate-limited-job-middleware": "^2.2",
        "spatie/laravel-schemaless-attributes": "^2.0",
        "spatie/laravel-validation-rules": "^3.0",
        "spatie/laravel-view-models": "^1.4.0",
        "spatie/laravel-webhook-client": "^3.0",
        "spatie/query-string": "^1.0",
        "spatie/simple-excel": "^1.14",
        "spatie/temporary-directory": "^2.0",
        "symfony/css-selector": "^6.0",
        "symfony/dom-crawler": "^6.0",
        "symfony/http-client": "^6.0",
        "tijsverkoyen/css-to-inline-styles": "^2.2"
    },
    "require-dev": {
        "brianium/paratest": "^6.2",
        "fakerphp/faker": "^1.9",
        "laravel/framework": "^9.0",
        "nunomaduro/collision": "^6.0",
        "nunomaduro/larastan": "^2.0",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-livewire": "^1.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "predis/predis": "^1.1",
        "spatie/laravel-ray": "^1.27",
        "spatie/pest-plugin-snapshots": "^1.1",
        "spatie/phpunit-snapshot-assertions": "^4.2",
        "spatie/test-time": "^1.3",
        "symfony/var-dumper": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\Mailcoach\\": "src",
            "Spatie\\Mailcoach\\Database\\Factories\\": "database/factories"

        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\Mailcoach\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "test": "./vendor/bin/pest",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "split": "./split.sh"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Spatie\\Mailcoach\\MailcoachServiceProvider"
            ]
        }
    }
}
